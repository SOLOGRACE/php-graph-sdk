<script>
		var person ={userID: "", name: "", accessToken: "",email:"",gender:""};
		function login() {
            FB.login(function (response) {
					//console.log(response);
                 if (response.status == "connected") {
                    person.userID = response.authResponse.userID;
                    person.accessToken = response.authResponse.accessToken;

                   FB.api('/me?fields=id,name,email,gender,Phones',function (userData) {
							//console.log(userData);
                        person.name = userData.name;
                        person.email = userData.email;
						person.gender = userData.gender;
						person.mobile = userData.Phones;
                     //   person.picture = userData.picture.data.url;

                      $.ajax({
                           url: "social_login.html",
                           method: "POST",
                           data: person,
                           dataType: 'text',
                           success: function (serverResponse) {
                               //console.log(person);
                               if (serverResponse == "success")
                                   window.location = "index.php";
                           }
                        });
                    });
                }
            }, {scope: 'public_profile, email,user_gender'});
        }   
  window.fbAsyncInit = function() {
    FB.init({
      appId            : 'Your ID',
      autoLogAppEvents : true,
      xfbml            : true,
      version          : 'v3.1'
    });
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "https://connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>
    
